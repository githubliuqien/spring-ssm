<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.relevancy.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.qf.relevancy.model.po.User">
        <!--@mbg.generated-->
        <!--@Table u_user-->
        <id column="u_id" jdbcType="INTEGER" property="uId"/>
        <result column="u_username" jdbcType="VARCHAR" property="uUsername"/>
        <result column="u_password" jdbcType="VARCHAR" property="uPassword"/>
        <result column="u_sex" jdbcType="VARCHAR" property="uSex"/>
        <result column="u_age" jdbcType="INTEGER" property="uAge"/>
        <result column="u_phone" jdbcType="VARCHAR" property="uPhone"/>
        <result column="u_email" jdbcType="VARCHAR" property="uEmail"/>
        <result column="role_id" jdbcType="INTEGER" property="roleId"/>
        <result column="is_delete" jdbcType="INTEGER" property="isDelete"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        u_id,
        u_username,
        u_password,
        u_sex,
        u_age,
        u_phone,
        u_email,
        role_id,
        is_delete
    </sql>

    <select id="selectAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from u_user
    </select>

    <select id="selectByRoleID" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from u_user
        where role_id = #{rid}
    </select>

    <select id="selectBean" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from u_user
        <where>
            <if test="user.roleId != null  and user.roleId != ''">
                role_id = #{user.roleId}
            </if>

            <if test="user.uAge != null">
                and u_age = #{user.uAge}
            </if>

            <if test="user.uEmail != null and user.uEmail != ''">
                and u_email = #{user.uEmail}
            </if>

            <if test="user.uPassword != null  and user.uPassword != ''">
                and u_password = #{user.uPassword}
            </if>
        </where>
    </select>

    <resultMap id="UserBoResultMap" extends="BaseResultMap" type="com.qf.relevancy.model.bo.UserBo">
        <association property="role" column="role_id" select="com.qf.relevancy.mapper.RoleMapper.selectByRole"/>
    </resultMap>

    <select id="selectByID" resultMap="UserBoResultMap">
        select u_id,
               u_username,
               u_password,
               u_sex,
               u_age,
               u_phone,
               u_email,
               role_id,
               is_delete
        from u_user
        where u_id = #{id};
    </select>

    <resultMap id="UserBoToResulMap" type="com.qf.relevancy.model.bo.UserBoTo" extends="BaseResultMap">
        <association property="roleBo" column="role_id" javaType="com.qf.relevancy.model.bo.RoleBo"
                     select="com.qf.relevancy.mapper.RoleMapper.selectBeanRoleId"/>
    </resultMap>

    <!-- 开启二级缓存 -->
    <cache/>

    <select id="selectByIdToAllInfo" resultMap="UserBoToResulMap">
        select u_id,
               u_username,
               u_password,
               u_sex,
               u_age,
               u_phone,
               u_email,
               role_id,
               is_delete
        from u_user
        where u_id = #{id};
    </select>
</mapper>